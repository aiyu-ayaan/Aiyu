# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/aiyu
# For Docker Compose, use: mongodb://admin:YOUR_MONGO_PASSWORD_HERE@mongodb:27017/aiyu?authSource=admin
# WARNING: Replace YOUR_MONGO_PASSWORD_HERE with a strong password matching MONGO_ROOT_PASSWORD

# MongoDB Root Credentials (for Docker Compose)
# WARNING: These are used to create the MongoDB root user - use strong, unique passwords!
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=YOUR_MONGO_PASSWORD_HERE

# N8N Webhook URL
NEXT_PUBLIC_N8N_WEBHOOK_URL=

# Admin Panel Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password

# JWT Secret (generate a secure random string)
JWT_SECRET=your_jwt_secret_key_here

# Application Port (optional, defaults to 3000)
APP_PORT=3000
